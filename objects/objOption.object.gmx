            <string>///Movement: Option

//Input
key_left = keyboard_check(vk_left);
key_right = keyboard_check(vk_right);
key_up = keyboard_check(vk_up);
key_down = keyboard_check(vk_down);

///Movement (Delayed)

//Wait before moving
if (key_right || key_left || key_up || key_down) movementimer -= 1;
//Move
if (movementimer == 0 || movementimer &lt; 0)
{
    moveh = objVicViper.key_right - objVicViper.key_left;
    movev = objVicViper.key_down - objVicViper.key_up;
    hsp = moveh * objVicViper.movesp;
    vsp = movev * objVicViper.movesp;
}
if (hsp &amp;&amp; vsp = 0) &amp;&amp; (movementimer == 0 || movementimer &lt; 0) movementimer = 20;
if (hsp &gt; 0 &amp;&amp; objVicViper.hsp = 0) hsp = 0;

//Stop at the borders of the camera
if place_meeting(x+1,y,objCameraHR) &amp;&amp; (hsp &gt; 0) x = objCameraHR.x-13;
if place_meeting(x-1,y,objCameraHL) &amp;&amp; (hsp &lt; 0) x = objCameraHL.x+13;
if place_meeting(x,y+1,objCameraWD) &amp;&amp; (vsp &gt; 0) y = objCameraWD.y-7;
if place_meeting(x,y-1,objCameraWU) &amp;&amp; (vsp &lt; 0) y = objCameraWU.y+7;

x += global.scrollspeed + hsp;
y += vsp;
